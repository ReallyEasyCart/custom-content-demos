
.team-container {
    margin: 0 -10px;
}

.team-container .pure-u-1 {
    /* give rows some spacing */
    margin-bottom: 20px;
}

/* each member within a team */
.team-member {
    margin: 0 10px;
    position: relative;
    padding-bottom: 110px;
    text-align: center;
    /* overflow hidden to allow us to hide the full info until hover */
    overflow: hidden;
}
.team-member,
.team-member h2 {
    color: #FFF;
}


/* team info shows on hover, but also shows a small area before to reveal name & job roles */
.team-member-info {
    background: #333;
    position: absolute;
    left: 0;
    right: 0;
    z-index: 2;
    top: calc(100% - 110px);
    height: 100%;
    padding: 10px;
    /* just in case screensize makes the content too small, set an overflow on these areas to allow scrolling */
    overflow: auto;
    /* smooth scroll the top postion */
    transition: top .3s; 
}

/* name and job roles area, fixed height for consitancy */
.team-member-info-core {
    height: 80px;
}

/* on hover of a team memeber, reveal all info */
.team-member:hover .team-member-info {
    top: 0;
}
