/* Collection */
.recipe-collection-wrapper {
    padding: 5px;
}
.recipe-collection-each {
    border-radius: 2px;
    box-shadow: 0 2px 2px 0 rgba(0,0,0,0.14), 0 1px 5px 0 rgba(0,0,0,0.12), 0 3px 1px -2px rgba(0,0,0,0.2);
}
.recipe-collection-each-image {
    border-radius: 2px 2px 0 0;
}
.recipe-collection-each-link {
    padding: 0;
    display: block;
    font-size: 15px;
    text-align: center;
    text-decoration: none;
    color: #3A3A3A;
}
.recipe-collection-each-name {
    padding: 24px 12px;
    display: block;
}

/* Info */
.recipe-title {
    margin: 0;
    padding: 12px 0 28px 16px;
    padding-top: 12px;
    padding-bottom: 28px;
}

.recipe-image {
    width: 100%;
    padding-left: 16px;
    padding-bottom: 32px;
}

.recipe-description {
    padding-left: 16px;
    color: #3A3A3A;
    font-size: 16px;
    line-height: 20px;
}

.recipe-metadata {
    padding-left: 16px;
}
.recipe-metadata-wrap {
    margin-bottom: 22px;
}
.recipe-metadata-wrap .recipe-metadata-heading {
    font-size: 14px;
    color: #676767;
    margin: 0 0 4px 0;
    line-height: 18px;
}
.recipe-metadata-wrap .recipe-metadata-content {
    font-size: 16px;
    font-weight: bold;
    color: #3A3A3A;
    margin: 0;
    line-height: 20px;
}

.recipe-ingredients {
    background: #F9F9F9;
    border: 1px solid #CCC;
}
.recipe-instructions {
    padding: 0 0 16px 16px;
}
.recipe-ingredients-wrapper {
    padding: 0 16px 16px 16px;
}
.recipe-instructions-wrapper {
    border-top: 1px solid #CCC;
    padding-right: 16px;
}
.recipe-ingredients-heading,
.recipe-instructions-heading {
    color: #3A3A3A;
    font-size: 24px;
    font-weight: 400;
    line-height: 28px;
    margin: 0;
    padding: 32px 0 16px 0;
}
.recipe-ingredients-list {
    list-style: none;
    margin: 0;
    padding: 0;
}
.recipe-ingredients-list .recipe-ingredients-list-item {
    padding-bottom: 8px;
    color: #3A3A3A;
    font-size: 16px;
    line-height: 20px;
}
.recipe-instructions-list {
    margin: 0;
}
.recipe-instructions-list .recipe-instructions-list-item {
    padding-bottom: 24px;
    padding-left: 8px;
    color: #3A3A3A;
    font-size: 16px;
    line-height: 20px;
}

/* Search */
.recipes-search-each {
    display: block;
    background: #EEE;
    border-radius: 5px;
    text-decoration: none;
    color: inherit;
}
.recipes-search-each .media-object-bd {
    padding: 1em 0;
}
.recipes-search-each img {
    max-width: 200px;
}