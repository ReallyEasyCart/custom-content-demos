<h1 class="recipe-title">{{ object.name }}</h1>

<div class="pure-g">
    <div class="pure-u-1 pure-u-md-1-2">
        <a href="{{ object.image }}" class="modal-image-popup">
            <img src="{{ object.image }}" class="recipe-image">
        </a>
    </div>
    <div class="pure-u-1 pure-u-md-1-2">
        <div class="recipe-metadata">
            <div class="recipe-metadata-wrap">
                <p class="recipe-metadata-heading">Preparation time</p>
                <p class="recipe-metadata-content">{{ object.prep_time }}</p></p>
            </div>
            <div class="recipe-metadata-wrap">
                <p class="recipe-metadata-heading">Cooking time</p>
                <p class="recipe-metadata-content">{{ object.cook_time }}</p></p>
            </div>
            <div class="recipe-metadata-wrap">
                <p class="recipe-metadata-heading">Serves</p>
                <p class="recipe-metadata-content">{{ object.serves }}</p></p>
            </div>
            {% if (object.tagGroups.dietary.tags|length > 0 ) %}
                <div class="recipe-metadata-wrap">
                    <p class="recipe-metadata-heading">Dietary</p>
                    <p class="recipe-metadata-content">
                        {% for requirement in object.tagGroups.dietary.tags %}
                            <a href="{{ requirement.link }}" style="background: {{ requirement.color }};" class="recipe-metadata-tag module-tag module-tag-{{ requirement.contrast }}">{{ requirement.name }}</a>
                        {% endfor %}
                    </p>
                </div>
            {% endif %}
        </div>
        <div class="recipe-description">{{ object.description }}</div>
    </div>
    <div class="pure-u-1 pure-u-md-3-4">
        <div class="recipe-instructions">
            <div class="recipe-instructions-wrapper">
                <h2 class="recipe-instructions-heading">Instructions</h2>
                <ol class="recipe-instructions-list">
                    {% for instruction in object.instructions %}
                        <li class="recipe-instructions-list-item">{{ instruction }}</li>
                    {% endfor %}
                </ol>
            </div>
        </div>
    </div>
    <div class="pure-u-1 pure-u-md-1-4">
        <div class="recipe-ingredients">
            <div class="recipe-ingredients-wrapper">
                <h2 class="recipe-ingredients-heading">Ingredients</h2>
                <ul class="recipe-ingredients-list">
                    {% for ingredient in object.ingredients %}
                        <li class="recipe-ingredients-list-item">{{ ingredient }}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</div>