/* place full page header */
.place-info {}
.place-info header {
    background: #993729;
    padding: 1px 2em 2em;
    text-align: center;
}
.place-info header,
.place-info h1,
.place-info header a {
    color: #FFF;
}
.place-info h1 {
    border-bottom: 1px solid #FFF;
    padding: 0.67em 0;
    font-family: Times;
    font-style: italic;
}
.place-info header strong {
    display: block;
    font-weight: normal;
    text-transform: uppercase;
}

/* footer for each place to show date created */
.place-info footer {
    color: #666;
    padding: 1em 0;
}

/* image gallery (uses owl) */
.place-image-gallery {
    height: 320px;
    display: block;
    transition: height .5s;
}
.place-image-gallery img {
    max-height: 320px;
}

/* tabbed main content */
.place-tabs {
    padding: 0;
}
.place-tabs .ui-tabs-nav {
    background: #a1b4c6;
    padding: 1em;
    /*margin: 0 -15px;*/
    border-radius: 0;
}
.place-tabs .ui-tabs-nav li {
    background: transparent;
    border: none;
}
.place-tabs .ui-tabs-nav a {
    color: #FFF;
    text-transform: uppercase;
}

.place-tabs .ui-tabs-nav .ui-state-active a {
    font-weight: bold;
    border-bottom: 2px solid #FFF;
}

.place-tabs .ui-tabs-nav li:hover a {
    font-weight: bold;
}

/* owl carousel */
.place-image-gallery .owl-carousel .owl-item img {
    width: auto;
    max-width: 100%;
}
