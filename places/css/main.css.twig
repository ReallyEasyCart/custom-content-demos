
/* ===== Listing places ===== */

/* Places outer container */
.places-container {
    /*margin: 0 -0.5em;*/
}

/* Each place */
.place-each,
.place-each-image,
.place-each-name {
    display: block;
}

.place-each {
    margin: 0 0.5em 1em;
    text-decoration: none;
}
.place-each-name {
    background: #d18152;
    color: #FFF;
    padding: 1em;
    text-align: center;
    font-family: Times;
    font-size: 18px;
    font-style: italic;
    border-bottom-left-radius: .5em;
    border-bottom-right-radius: .5em;
}
.place-each:hover .place-each-name {
    background: #993729;
}

/* tags */

.module-tag {
    display: inline-block;
    border-radius: 3px;
    padding: 3px 6px;
    text-decoration: none;
    font-family: serif;
    font-style: italic;
    font-size: small;
}
.module-tag-light { color: #FFF; }
.module-tag-dark { color: #000; }

/* filters */

.module-form {
    display: none;
    background: #516782;
    color: #FFF;
    padding: 1em;
}
.module-form.is-open {
    display: block;
}
input[type="submit"].module-form-submit {
    background: #172835;
    border-color: #172835;
}
input[type="button"].module-form-clear {
    background: transparent;
    border-color: transparent;
}
.module-form-toggle { margin: 0; }
.module-form-toggle a {
    background: #172835;
    color: #FFF;
    display: block;
    padding: 1em;
}
.module-form-toggle a:after {
    content: "\f067";
    color: #FFF;
    float: right;
    font-family: FontAwesome;
    transition: transform .5s;
}
.module-form-toggle .toggle-el-is-open:after {
    transform: rotate(-45deg);
}

/* select2 used on filters,minor tweaks to it's default style */
.module-form .select2-container--default .select2-selection--multiple .select2-selection__choice {
    background-color: #516782;
    border-color: #516782;
}

/* ===== Search results for places ===== */
.place-search-each {
    display: block;
    background: #EEE;
    border-radius: 5px;
    text-decoration: none;
    color: inherit;
}
.place-search-each .media-object-bd {
    padding: 1em 0;
    font-family: Times;
    /*font-size: 18px;*/
    font-style: italic;
}
.place-search-each img {
    max-width: 200px;
}


/* ===== Show a specific place ===== */

