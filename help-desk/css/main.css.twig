
/* === Help desk styling === */

/* --- Collection view --- */

/* header */
.help-desk-header {
    text-align: center;
}
.help-desk-header h1 {
    font-size: 48px;
    margin-bottom: 20px;
}

/* tags */
.help-desk-tags-container {
    margin-top: 20px;
    margin-bottom: 0;
}
.help-desk-tag {
    display: inline-block;
    padding: 5px 20px;
    text-decoration: none;
    font-size: small;
    margin: 0 8px;
}
.help-desk-tag-light { color: #FFF; }
.help-desk-tag-dark { color: #000; }

/* selected tag */
.help-desk-tag-selected {
    padding-bottom: 16px;
}
/* selected tag bar */
.help-desk-tag-bar {
    padding: 5px;
}

/* search bar */
.help-desk-search-container .select2 {
    max-width: 100%;
}

/* --- Each view --- */
.help-desk-article {
    display: block;
    padding: 25px;
    margin: 15px;
    border: 1px solid #CCC;
    text-decoration: none;
    color: inherit;
    transition: background-color .3s;
}
.help-desk-article:hover {
    background-color: #f5faff;
}
.help-desk-article h2 {
    margin-top: 0;
}

/* --- Info view --- */
.help-desk-full-page {
    margin: 0 auto;
    max-width: 760px;
}
.help-desk-full-page .help-desk-tag {
    margin: 0;
}
.help-desk-full-page .help-desk-tag-all {
    float: right;
}
