
/* ===== Polls module ===== */

.poll-container {
    margin: 10px 0;
    padding: 10px;
    border-radius: 4px;
    border: 1px solid #CCC;
    background: #FFF;
    line-height: 1;
}
.poll-bar,
.poll-select {
    display: block;
    white-space: nowrap;
    padding: 6px 12px;
    margin: 9px 0;
    border-radius: 4px;
    color: #000;
    vertical-align: text-top;
}
.poll-bar,
.poll-select:hover {
    background: #EEE;
}
.poll-bar-max {
    background: #77c7f7;
}
.poll-bar[style="width: 0%"] { background: #FFF; }
.poll-bar strong {
  font-weight: bold;
  width: 3em;
  display: inline-block;
}
.poll-select input {
    vertical-align: text-top;
    margin-right: 6px;
}
